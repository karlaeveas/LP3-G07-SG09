public class Menor {
    public static void main(String[] args) {
        // Ejemplo de uso de la función menor
        double num1 = 5.7;
        double num2 = 3.4;
        double num3 = 7.2;

        double menor = menor(num1, num2, num3);
        System.out.println("El menor de los tres números es: " + menor);
    }

    // Función que devuelve el menor de tres números decimales
    public static double menor(double a, double b, double c) {
        double menor = a; // Suponemos que a es el menor al principio

        if (b < menor) {
            menor = b; // b es menor que el menor actual
        }

        if (c < menor) {
            menor = c; // c es menor que el menor actual
        }

        return menor;
    }
}
